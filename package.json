  "scripts": {
    "dev": "vite dev --port 3000 --host",
    "start": "node .output/server/index.mjs",
    "build": "vite build",
    "build:spa": "pnpm fetch:fonts && vite build -c vite.spa.config.ts && pnpm generate:index && node -e \"require('node:fs').copyFileSync('public/_headers','.tanstack/start/build/client-dist/_headers')\"",
    "build:worker": "pnpm build:spa && vite build -c vite.worker.config.ts",
    "fetch:fonts": "node scripts/fetch-fonts.mjs",
    "serve": "vite preview",
    "dev:spa": "vite dev -c vite.spa.config.ts --port 5174 --host --open /index.html",
    "preview:spa": "vite preview -c vite.spa.config.ts --port 5175",
    "dev:diag": "vite dev -c vite.spa.config.ts --port 5176 --host --open /diag.html",
    "cf:workers:dev": "pnpm build:worker && wrangler dev",
    "cf:workers:deploy": "pnpm build:worker && wrangler deploy",
    "generate:index": "node scripts/generate-index.mjs",
    "test": "vitest run",
    "format": "biome format --write",
    "lint": "biome lint --write",
    "check": "biome check"
